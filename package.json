{
    "name": "raspiscript",
    "productName": "raspiscript",
    "version": "1.0.0",
    "description": "My Electron application description",
    "main": "dist/index.js",
    "scripts": {
        "build": "rm -f -r -- dist && tsc && mkdir dist/lib && mkdir dist/lib/blockly && cp -r src/lib/* dist/lib && yarn run move-html",
        "watch": "tsc -w",
        "lint-ts": "tslint -c tslint.json -p tsconfig.json",
        "lint-es": "eslint src",
        "lint": "yarn run lint-es && yarn run lint-ts",
        "lint-fix": "yarn run lint-es --fix && yarn run lint-ts --fix",
        "start": "yarn run build && electron-forge start",
        "package": "yarn run build && electron-forge package",
        "make": "yarn run build && electron-forge make",
        "move-html": "cp src/*.html dist",
        "minify-index": "node-minify --compressor all --input 'dist/index.js' --output 'dist/index.js'",
        "minify-renderer": "node-minify --compressor all --input 'dist/renderer.js' --output 'dist/renderer.js'",
        "minify": "yarn run minify-index && yarn run minify-renderer",
	      "setup": "yarn install",
	      "test": "echo \"Error: No test specified\""
    },
    "keywords": [],
    "author": "marvin",
    "license": "MIT",
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "squirrel"
                ],
                "darwin": [
                    "zip"
                ],
                "linux": [
                    "deb",
                    "rpm"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "yarn"
            },
            "electronWinstallerConfig": {
                "name": "raspiscript"
            },
            "electronInstallerDebian": {},
            "electronInstallerRedhat": {},
            "github_repository": {
                "owner": "",
                "name": ""
            },
            "windowsStoreConfig": {
                "packageName": "",
                "name": "raspiscript"
            }
        }
    },
    "dependencies": {
        "electron-compile": "^6.4.2",
        "google-blockly": "^1.0.0",
        "libxmljs": "^0.19.0"
    },
    "devDependencies": {
        "babel-plugin-transform-async-to-generator": "6.24.1",
        "babel-preset-env": "1.7.0",
        "babel-preset-react": "6.24.1",
        "electron-forge": "5.2.2",
        "electron-prebuilt-compile": "2.0.2",
        "eslint": "4.19.1",
        "eslint-config-airbnb": "16.1.0",
        "eslint-plugin-import": "2.12.0",
        "eslint-plugin-jsx-a11y": "6.0.3",
        "eslint-plugin-react": "7.9.1",
        "tslint": "5.10.0",
        "typescript": "2.9.2"
    }
}
